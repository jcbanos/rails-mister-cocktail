<h1 class = "text-center">Add your poison</h1>
<div class="container">
    <div class="row justify-content-center">
      <div class="col-4">
        <%= simple_form_for(@cocktail) do |f| %>
          <% if @cocktail.errors.any? %>
            <div class="errors-container">
              <ul>
                <% @cocktail.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.input :name %>
          <%= f.submit%>
        <% end %>
        </div>
    </div>
</div>
