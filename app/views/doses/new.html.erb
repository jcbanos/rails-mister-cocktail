<h1 class = "text-center">Add poison to your poison</h1>
<div class="container">
    <div class="row justify-content-center">
      <div class="col-4">
        <%= simple_form_for [@cocktail, @dose], url: cocktail_doses_path, method: :post do |f| %>
          <% if @dose.errors.any? %>
            <div class="errors-container">
              <ul>
                <% @dose.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.submit%>
        <% end %>
        </div>
    </div>
</div>
